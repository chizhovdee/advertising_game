<div class="list">
  <% for ad in @advertising: %>
    <div class="ad <%= ad.key %>" >
      <div class="picture"><%=@safe @.advertisingPicture(ad) %></div>

      <div class="controls">
        <button class="buy" data-type="<%= ad.key %>"><%= I18n.t('advertising.buy') %></button>
      </div>
    </div>
  <% end %>
</div>