<h1><%= I18n.t('routes.index.title') %></h1>

<% if @currentTypeKey?: %>

  <div class="list">
    <%=@safe @.renderTemplate('routes/list') %>
  </div>

<% else: %>
  <div class="types">
    <% for type in @types: %>
      <div class="type <%= type.key %>" data-type-key="<%= type.key %>"></div>
    <% end %>
  </div>
<% end %>