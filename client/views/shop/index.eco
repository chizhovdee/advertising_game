<h1><%= I18n.t('shop.index.title') %></h1>

<div class="groups">
  <% for group in @groups: %>
    <div
        class="group <%= group %> <%= 'current' if @currentGroup == group %>"
        data-group="<%= group %>"></div>
  <% end %>
</div>

<div class="list">
  <%=@safe @.renderTemplate('shop/list') %>
</div>