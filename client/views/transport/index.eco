<h1><%= I18n.t('transport.index.title') %></h1>

<% if @currentTypeKey?: %>
  <div class="list">
    <%=@safe @.renderTemplate('transport/list') %>
  </div>

<% else: %>
  <div class="types">
    <% for type in @types: %>
      <div class="type"
           style="background-image: url('<%= @.transportTypePictureUrl(type) %>');"
           data-type-key="<%= type.key %>">
      </div>
    <% end %>
  </div>
<% end %>