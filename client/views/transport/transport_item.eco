<div class="transport" id="transport_<%= @transport.id %>">
  <div class="picture"><%=@safe @.transportPicture(@transport.type) %></div>

  <div class="info">
    <div class="name"><%= @transport.type.name() %></div>

    <div class="attributes">
      <div class="attribute serviceability">
        <div class="att_name"><%= I18n.t("transport.attributes.serviceability") %></div>
        <div class="value"><%= @transport.serviceability %>%</div>
      </div>
    </div>
  </div>
</div>