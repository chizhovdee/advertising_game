<div class="transport" id="transport_<%= @transport.id %>">
  <div class="picture"><%=@safe @.transportPicture(@transport.type) %></div>

  <div class="info">
    <div class="name"><%= @transport.type.name() %></div>

    <div class="attributes">
      <div class="attribute damage">
        <div class="att_name"><%= I18n.t("transport.attributes.damage") %></div>
        <div class="value"><%= @transport.damage %>%</div>
      </div>

      <% for attr in @transportAttributes: %>
        <div class="attribute <%= attr %>">
          <div class="att_name"><%= I18n.t("transport.attributes.#{attr}") %></div>
          <div class="value">
            <%= @transport.type[attr] %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="controls">
    <% if @transport.id in @selectedTransportIds: %>
      <span class="selected"><%= I18n.t('transport.selection.selected') %></span>
    <% else: %>
      <button class="select" data-transport-id="<%= @transport.id %>">
        <%= I18n.t('transport.selection.select') %>
      </button>
    <% end %>
  </div>
</div>